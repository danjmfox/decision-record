{
  "$schema": "https://raw.githubusercontent.com/release-it/release-it/main/conf/release-it.schema.json",
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md"
    }
  },
  "git": {
    "commitMessage": "chore: release ${version}",
    "tagName": "v${version}",
    "requireBranch": "main",
    "requireCleanWorkingDir": true
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "drctl ${version}",
    "draft": false,
    "tokenRef": "GITHUB_TOKEN"
  },
  "hooks": {
    "before:init": ["npm run build", "npm test"]
  }
}
